<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="14dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/message_img"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:src="@drawable/common_google_signin_btn_text_dark"/>


    <TextView
        android:id="@+id/message_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_alignParentTop="true"
        android:layout_marginLeft="11dp"
        android:layout_marginStart="11dp"
        android:layout_toEndOf="@+id/message_img"
        android:layout_toRightOf="@+id/message_img"
        android:background="@drawable/message_text_background_"
        android:padding="15dp"
        android:text="Meessage"
        android:textSize="14dp"
        android:textColor="#FFFFFF"/>
    <ImageView
        android:id="@+id/message_image_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignStart="@+id/message_message"
        android:layout_below="@+id/message_message"
        android:layout_marginLeft="0dp"
        android:layout_toEndOf="@+id/message_img"
        android:padding="0dp"
        android:scaleType="centerCrop"
        android:layout_alignParentRight="true"
        android:layout_alignLeft="@+id/message_message"
        android:layout_toRightOf="@+id/message_img" />

</RelativeLayout>